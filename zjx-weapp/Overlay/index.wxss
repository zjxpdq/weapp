.z-overlay-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .7);
  transition-property: all;
  transition-duration: 300ms;
  transition-timing-function: ease-in-out;
  opacity: 0;
  visibility: hidden
}

.z-overlay-mask-show {
  opacity: 1;
  visibility: visible
}
