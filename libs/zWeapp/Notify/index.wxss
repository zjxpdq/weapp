.z-notify {
  display: block;
  line-height: 2.3;
  position: fixed;
  font-size: 14px;
  opacity: 0;
  -webkit-transform: translateZ(0) translateY(-100%) translateX(-50%);
  transition: all .4s ease-in-out;
  left: 50%;
  box-shadow: 0 3px 12px 0 rgba(0, 0, 0, 0.12);
  border-radius: 6px;
}

.z-notify-show {
  -webkit-transform: translateZ(0) translateY(0) translateX(-50%);
  opacity: 1
}

.z-notify-center {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
}

.z-notify-icon {
  width: 48rpx;
  height: 48rpx;
  background-size: 100%;
  border-radius: 50%;
  margin-right: 24rpx;
}

